    <style>
        body {
            overflow: hidden;
        }
        #root {
            overflow: hidden;
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        #content {
            width: 100%;
            height: 100%;
            overflow-y: scroll;
        }
        ::-webkit-scrollbar {
        width: 10px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
        background: #f1f1f1; 
        }
        
        /* Handle */
        ::-webkit-scrollbar-thumb {
        background: #888; 
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
        background: #555; 
        }
    </style>
</head>
<body>
    <div id="root">
        {{> header}}
        <div id="content">
            {{{body}}}
        </div>
        {{> footer}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        function checkIsDiv (node) {
            return node instanceof HTMLDivElement;
        }

        function checkIsInput (node) {
            return node instanceof HTMLInputElement;
        }
        
        function addGraphInputs () {
            const inputsDiv = document.querySelector('#graphInputs');
            const inputWrapper = inputsDiv.querySelector('.graphInputWrapper');
            const clonedInputWrapper = inputWrapper.cloneNode(true);
            clonedInputWrapper.childNodes.forEach((node) => {
                if(!checkIsDiv(node)) {
                    return;
                }

                node.childNodes.forEach((input) => {
                    if(!checkIsInput(input)) {
                        return;
                    }

                    input.value = '';
                })
            })
            inputsDiv.appendChild(clonedInputWrapper);
        }

       /* function submitGraph(e) {
